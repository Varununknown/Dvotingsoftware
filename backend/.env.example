# E-Voting System Environment Configuration
# Copy this file to .env and replace placeholder values

# MongoDB Connection
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=development # Set to 'production' when deploying

# Frontend URL (for CORS in production)
FRONTEND_URL=https://your-frontend-domain.com

# Security Settings
SESSION_SECRET=your_session_secret_here # Min 32 chars, use a strong random string
JWT_SECRET=your_jwt_secret_here # Min 32 chars, use a strong random string
JWT_EXPIRES_IN=7d # Token validity period

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # Max requests per IP in window

# Optional: Logging
LOG_LEVEL=info # 'error', 'warn', 'info', 'debug'

# Add any other environment variables your application needs